{
    "name": "rep98/csv-to-array",
    "description": "Combierte Archivos CSV a xml, json y array en php",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CsvTo\\": "src/"
        },"files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CsvTo\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Robert PÃ©rez",
            "email": "delfinmundo@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/REP98/csv-to-array"
        }
    ],
    "prefer-stable": true,
    "support": {
        "email": "delfinmundo@gmail.com"
    },
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1"
    },
    "config": {        
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "generate:docs": [
            "Composer\\Config::disableProcessTimeout",
            "phpdoc --config=\"phpdoc.dist.xml\" --title=\"Convertidor CSV\""
        ],
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --coverage-html=\"docs/tests/\" tests"
        ]
    }
}
